// START Top Navbar
nav.navbar.topnavbar(role='navigation', ng-controller="HeaderNavController")
	// START navbar header
	.navbar-header(ng-class="app.theme.brand")
		a.navbar-brand(ui-sref='app.home') 
			img.brand-logo(src="app/img/logo--elibrary.png", alt="App Logo")
			img.brand-logo-collapsed(src="app/img/logo--aaa.png", alt="App Logo")

		// Mobile buttons
		.mobile-toggles
			// Button to show/hide the header menu on mobile. Visible on mobile only.
			a(href='#', toggle-state="hmenu-toggled", no-persist, ng-click="toggleHeaderMenu()").menu-toggle
				em.fa.fa-cog  
			// Button to show/hide the sidebar on mobile. Visible on mobile only.
			a(href='#', toggle-state="aside-toggled", no-persist).sidebar-toggle
				em.fa.fa-navicon

	// END navbar header

	// START Nav wrapper
	.nav-wrapper.collapse.navbar-collapse(collapse="headerMenuCollapsed")
		
		// START Left navbar
		ul.nav.navbar-nav
			li
				// Button used to collapse the left sidebar. Only visible on tablet and desktops
				a(href='#', ng-click="app.sidebar.isCollapsed = !app.sidebar.isCollapsed").hidden-xs
					em.fa(ng-class="app.sidebar.isCollapsed ? 'fa-caret-right':'fa-caret-left'")
		// END Left navbar

		// START Top navbar search form
		form.search-form.navbar-form.navbar-left(role='search')
			.form-group
				.input-group(ng-controller='SearchFormController')
					span.input-group-addon: em.icon-search
					input.form-control(type='text', ng-model='routeSelected', typeahead='state for state in states | filter:$viewValue | limitTo:8', placeholder="{{ 'topbar.search.PLACEHOLDER' | translate }}", typeahead-on-select='onRouteSelect($item, $model, $label)')
			button.hidden.btn.btn-default(type='submit') Submit
		// END Top navbar search form

		// START Right Navbar
		ul.nav.navbar-nav.navbar-right
			// START Alert menu
			li.dropdown.dropdown-list
				a.dropdown-toggle(href='#', dropdown-animate="")
					.point-pin
						em.icon-globe.fa-fw
						//- .point.point-success.point-lg
					span.visible-xs-inline.ml View Alerts 
				ul.dropdown-menu.fadeInLeft2.animated(offcanvas-dropdown="")
					li(ng-init="offcontent1 = true")
						a.p(href='#', ng-click="offcontent1 = false")
							.media
								.media-body.clearfix
									p.m0.text-gray.text-sm English
					li(ng-init="offcontent2 = true")
						a.p(href='#', ng-click="offcontent2 = false")
							.media
								.media-body.clearfix
									p.m0.text-gray.text-sm 簡體中文
					li(ng-init="offcontent3 = true")
						a.p(href='#', ng-click="offcontent3 = false")
							.media
								.media-body.clearfix
									p.m0.text-gray.text-sm 繁體中文